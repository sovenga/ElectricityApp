<Page
    x:Class="ElectricityApp.RemoveUserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="394" Margin="56,59,0,0" VerticalAlignment="Top" Width="679">
            <TextBlock HorizontalAlignment="Left" Margin="0,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="39" FontSize="24" FontWeight="Bold">
    			<Run Text="ENTER "/>
    			<Run Text="YOUR "/>
    			<Run Text="USERNAME"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="117,47,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="398" FontWeight="Bold"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="332,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259" Height="35"/>
            <TextBlock HorizontalAlignment="Left" Margin="25,262,0,0" TextWrapping="Wrap" Text="Please note that the user will be removed" VerticalAlignment="Top" Height="32" Width="269" FontSize="14">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFF10832" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Button x:ConnectionId='1' x:Name="btnRemoveUser" Content="Remove User" HorizontalAlignment="Left" Margin="459,250,0,0" VerticalAlignment="Top" Width="135"                        />
            <Button x:ConnectionId='2' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top"                     />
            <TextBlock HorizontalAlignment="Left" Margin="117,107,0,0" TextWrapping="Wrap" Text="Remove Your Account??" VerticalAlignment="Top" FontSize="20" Width="398" FontWeight="Bold"/>
            <HyperlinkButton x:ConnectionId='3' Content="Remove All Users" HorizontalAlignment="Left" Margin="294,253,0,0" VerticalAlignment="Top"                              />
        </Grid>

    </Grid>
</Page>

