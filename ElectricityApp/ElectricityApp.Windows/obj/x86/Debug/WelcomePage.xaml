<Page
    x:Class="ElectricityApp.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="205,38,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="22" Width="355" FontWeight="Bold"/>
        <Button x:ConnectionId='1' Content="BACK" HorizontalAlignment="Left" Margin="22,35,0,0" VerticalAlignment="Top"                     />
        <Frame HorizontalAlignment="Left" Margin="25,75,0,0" VerticalAlignment="Top" Height="405" Width="706" RenderTransformOrigin="0.397,0.585">
            <Grid HorizontalAlignment="Left" Height="366" Margin="36,23,0,0" VerticalAlignment="Top" Width="593">
                <HyperlinkButton x:ConnectionId='2' Content="CHECK UNITS" HorizontalAlignment="Left" Margin="7,146,0,0" VerticalAlignment="Top" FontSize="22"                                />
                <HyperlinkButton x:ConnectionId='3' x:Name="linkLogout" Content="LOGOUT" HorizontalAlignment="Left" Margin="7,283,0,0" VerticalAlignment="Top" FontSize="22"                         />
                <HyperlinkButton x:ConnectionId='4' x:Name="linkremoveaccount" Content="Remove My Account" HorizontalAlignment="Left" Margin="7,210,0,0" VerticalAlignment="Top" FontSize="22"                                />
                <HyperlinkButton x:ConnectionId='5' x:Name="linkDropTable" Content="REMOVE ALL APPLIANCES" HorizontalAlignment="Left" Margin="7,178,0,0" VerticalAlignment="Top" FontSize="22"                            />
                <HyperlinkButton x:ConnectionId='6' Content="ADD APPLIANCES" HorizontalAlignment="Left" Margin="7,109,0,0" VerticalAlignment="Top" FontSize="22"                              />
                <HyperlinkButton x:ConnectionId='7' x:Name="linkDropHistory" Content="DROP HISTORY" HorizontalAlignment="Left" Margin="7,251,0,0" VerticalAlignment="Top" FontWeight="Normal" FontSize="22"                              />
            </Grid>
        </Frame>

    </Grid>
</Page>

