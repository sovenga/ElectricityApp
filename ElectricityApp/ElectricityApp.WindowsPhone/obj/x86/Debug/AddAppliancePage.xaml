<Page
    x:Class="ElectricityApp.AddAppliancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="415" Margin="10,10,0,0" VerticalAlignment="Top" Width="696">
            <TextBlock HorizontalAlignment="Left" Margin="190,10,0,0" TextWrapping="Wrap" Text="ADD APPLIANCE" VerticalAlignment="Top" FontSize="36" Width="316" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,120,0,0" TextWrapping="Wrap" Text="APPLIANCE NAME" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,183,0,0" TextWrapping="Wrap" Text="WATTS" VerticalAlignment="Top" FontSize="20"  RenderTransformOrigin="0.51,2.619"/>
            <TextBox x:Name="txtApplianceName" HorizontalAlignment="Left" Margin="356,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" />
            <TextBox x:Name="txtWatts" HorizontalAlignment="Left" Margin="356,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" />
            <Button x:ConnectionId='1' x:Name="btnAddAppliance" Content="ADD APPLIANCE" HorizontalAlignment="Left" Margin="453,297,0,0" VerticalAlignment="Top" Width="231"                              />
            <TextBox x:Name="txtNumberOfItems" HorizontalAlignment="Left" Margin="356,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,244,0,0" TextWrapping="Wrap" Text="NUMBER OF ITEMS OF SAME TYPE" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.51,2.619"/>
            <Button x:ConnectionId='2' Content="BACK" HorizontalAlignment="Left" Margin="-3,7,0,0" VerticalAlignment="Top" Width="113"                     />
        </Grid>

    </Grid>
</Page>

