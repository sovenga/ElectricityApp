<Page
    x:Class="ElectricityApp.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="394" Margin="10,41,0,0" VerticalAlignment="Top" Width="679">
            <TextBlock HorizontalAlignment="Left" Margin="0,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="309" Height="39" FontSize="24" FontWeight="Bold">
        		<Run Text="ENTER "/>
        		<Run Text="YOUR "/>
        		<Run Text="USERNAME"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="117,47,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="20" Width="398" FontWeight="Bold"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="332,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259" Height="48"/>
            <TextBlock HorizontalAlignment="Left" Margin="132,262,0,0" TextWrapping="Wrap" Text="forgot your use name?" VerticalAlignment="Top" Height="32" Width="162" FontSize="14">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FFF10832" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <Button x:ConnectionId='1' x:Name="btnSubmit" Content="SUBMIT" HorizontalAlignment="Left" Margin="329,250,0,0" VerticalAlignment="Top" Width="265"                        />
            <Button x:ConnectionId='2' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top"                     />
            <TextBlock x:Name="lblPassword" HorizontalAlignment="Left" Margin="132,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="459" Height="56"/>
        </Grid>

    </Grid>
</Page>

