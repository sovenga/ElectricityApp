<Page
    x:Class="ElectricityApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="429" Margin="10,-11,-251,0" VerticalAlignment="Top" Width="641">
            <TextBlock HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="18" Width="317" FontWeight="Bold"/>
            <TextBlock x:ConnectionId='1' HorizontalAlignment="Left" Margin="10,112,0,0" TextWrapping="Wrap" Text="USERAME" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619"/>
            <TextBlock x:ConnectionId='2' HorizontalAlignment="Left" Margin="10,169,0,0" TextWrapping="Wrap" Text="PASSWORD" VerticalAlignment="Top" FontSize="20"                                               RenderTransformOrigin="0.51,2.619"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="118,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="118,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
            <Button x:ConnectionId='3' x:Name="btnLogin" Content="LOGIN" HorizontalAlignment="Left" Margin="213,250,0,0" VerticalAlignment="Top" Width="148"                     />
            <HyperlinkButton x:ConnectionId='4' x:Name="linkRegister" Content="Register" HorizontalAlignment="Left" Margin="8,252,0,0" VerticalAlignment="Top"                               FontSize="16"/>
            <HyperlinkButton x:ConnectionId='5' Content="Forgot Password" HorizontalAlignment="Left" Margin="74,252,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.66,0.627"                                 FontSize="16" Width="140"/>
            <Button x:ConnectionId='6' Content="Button" HorizontalAlignment="Left" Margin="249,303,0,0" VerticalAlignment="Top"                       />
        </Grid>

    </Grid>
</Page>

