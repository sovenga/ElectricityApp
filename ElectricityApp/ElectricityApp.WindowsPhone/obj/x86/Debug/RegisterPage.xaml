<Page
    x:Class="ElectricityApp.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectricityApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left" Height="340" Margin="10,0,0,0" VerticalAlignment="Top" Width="390">
            <TextBlock HorizontalAlignment="Left" Margin="121,10,0,0" TextWrapping="Wrap" Text="ELECTRICITY UNITS CALCULATOR" VerticalAlignment="Top" FontSize="16" Width="269" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,120,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" FontSize="22"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,175,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="22"/>
            <TextBlock HorizontalAlignment="Left" Margin="10,231,0,0" TextWrapping="Wrap" Text="Confirm" VerticalAlignment="Top" FontSize="22"/>
            <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="109,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.251,0.019" Width="275"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="109,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.251,0.019" Width="275"/>
            <TextBox x:Name="txtConfirm" HorizontalAlignment="Left" Margin="109,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.251,0.019" Width="275"/>
            <Button x:ConnectionId='1' x:Name="btnRegister" Content="REGISTER" HorizontalAlignment="Left" Margin="275,280,0,0" VerticalAlignment="Top"                          />
            <Button x:ConnectionId='2' x:Name="btnBack" Content="BACK" HorizontalAlignment="Left" Margin="7,-10,0,0" VerticalAlignment="Top"                       FontSize="20"/>
        </Grid>

    </Grid>
</Page>

